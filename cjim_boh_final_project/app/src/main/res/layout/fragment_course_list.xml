<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="10" >

    <!--
    <ImageView
        android:id="@+id/image_view_home_page"
        android:layout_width="125dp"
        android:layout_height="125dp"
        android:layout_gravity="center"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="4dp"
        android:text="@string/courses_label"
        android:textSize="20dp"/>
     -->


    <android.support.v7.widget.RecyclerView
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/course_recycler_view"
        android:layout_width="wrap_content"
        android:layout_height="280dp"
        />
    <RelativeLayout
        android:orientation="horizontal"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="10dp"
        android:layout_marginEnd="10dp">

        <Button
            android:id="@+id/new_semester_button"
            android:background="@color/colorPrimary"
            android:layout_width="200dp"
            android:layout_height="36dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_marginTop="15dp"
            android:text="@string/new_semester"
            android:textColor="@android:color/white"
            android:textColorHighlight="@color/colorPrimary"
            android:textSize="16sp"
            android:gravity="center"/>

        <Button
            android:id="@+id/done_courses_button"
            android:background="@color/colorPrimary"
            android:layout_width="200dp"
            android:layout_height="36dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginTop="15dp"
            android:text="@string/no_more_courses"
            android:textColor="@android:color/white"
            android:textColorHighlight="@color/colorPrimary"
            android:textSize="16sp"
            android:gravity="center"/>
    </RelativeLayout>
</LinearLayout>
